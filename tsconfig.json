{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ESNext",
    "types": [
      "Node"
    ],
    "lib": [
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "pretty": true,
    "sourceMap": true,
    "outDir": "./build",
    "allowJs": true,
    "noEmit": false
  },
  "include": [
    "./src/**/*"
  ],
  "files": [
    "./src/server.ts"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}